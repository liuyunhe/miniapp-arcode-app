<view class="result-page">
  <image src="./../../images/result-bg.png" class="bg" mode="widthFix"></image>

  <view class="switch-bar">
      <view bindtap="onTabClick" data-current="shijiazhuang" class="switch-item {{current === 'shijiazhuang' ? 'active' : ''}}">
        <image src="./../../images/tab-bg{{current === 'shijiazhuang' ? '-active' : ''}}.png" mode="widthFix"></image>
        <text>石家庄</text>
      </view>
      <view bindtap="onTabClick" data-current="chengdu" class="switch-item {{current === 'chengdu' ? 'active' : ''}}">
        <image src="./../../images/tab-bg{{current === 'chengdu' ? '-active' : ''}}.png" mode="widthFix"></image>
        <text>成都</text>
      </view>
      <view bindtap="onTabClick" data-current="guangzhou" class="switch-item {{current === 'guangzhou' ? 'active' : ''}}">
        <image src="./../../images/tab-bg{{current === 'guangzhou' ? '-active' : ''}}.png" mode="widthFix"></image>
        <text>广州</text>
      </view>
  </view>

  <div class="data-view">


    <view class="data-table">
      <view class="table-row table-title">
        <view class="table-grid grid1">店面名称</view>
        <view class="table-grid grid2">店面地址</view>
        <view class="table-grid grid3">联系电话</view>
      </view>
      <view class="table-body">
        <block wx:for="{{data[current]}}" wx:for-item="item" wx:for-index="index" wx:key="item.name">
          <view class="table-row">
            <view class="table-grid grid1">{{item.name}}</view>
            <view class="table-grid grid2">{{item.address}}</view>
            <view class="table-grid grid3">{{item.phone}}</view>
          </view>
        </block>
      </view>

    </view>
  </div>

</view>